/* 页面基础样式 */
page {
  background-color: #000000;
}

/* 主容器，防止内容溢出 */
.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  overflow: hidden;
}

/* 顶部状态栏 */
.status-bar {
  height: 88rpx;
  padding: 0 32rpx;
  display: flex;
  align-items: center;
  /* 调试背景色 */
  background-color: rgba(0, 255, 0, 0.1);
}

.back-btn {
  color: #FFD700;
  font-size: 32rpx;
  padding: 16rpx 0;
}

/* 字幕显示区域 */
.subtitle-area {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  padding-bottom: 100rpx; /* 为固定定位的控制区域预留空间 */
  overflow: hidden;
}

/* 字幕包装器，控制字幕布局 */
.subtitle-wrapper {
  width: 90%;
  display: flex;
  flex-direction: column;
  gap: 16rpx; /* 减小行间距 */
  padding: 40rpx;
  max-height: calc(100% - 0rpx);
  overflow: hidden;
}

/* 字幕文本样式 */
.subtitle-text {
  text-align: center;
  line-height: 1.4;
  color: #FFD700;
  text-shadow: 0 2px 4px rgba(0, 0, 0, 0.5);
  white-space: normal;
  word-wrap: break-word;
  word-break: keep-all;
  overflow-wrap: break-word;
  transition: font-size 0.3s;
}

/* 控制区域样式 */
.controls {
  position: fixed;
  bottom: 36rpx;
  left: 0;
  right: 0;
  padding: 40rpx;
  background: linear-gradient(to top, rgba(0,0,0,0.9) 0%, rgba(0,0,0,0.7) 50%, transparent 100%);
}

/* 控制区域头部 */
.controls-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

/* 时间信息显示 */
.time-info {
  display: flex;
  align-items: center;
  color: #FFD700;
  font-size: 28rpx;
  font-variant-numeric: tabular-nums;
}

.time-divider {
  margin: 0 10rpx;
  opacity: 0.7;
}

/* 进度条区域 */
.progress-section {
  margin-bottom: 20rpx;
}

/* 进度条包装器 */
.progress-bar-wrapper {
  padding: 0 10rpx;
}

.progress-bar {
  margin: 0;
  width: 100%;
}

/* 按钮组样式 */
.buttons {
  display: flex;
  justify-content: center;
  gap: 30rpx;
  margin-top: 20rpx;
}

/* 控制按钮样式 */
.control-btn {
  min-width: 100rpx;
  height: 80rpx;
  border-radius: 40rpx;
  background: rgba(255, 215, 0, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s;
  color: #FFD700;
  font-size: 28rpx;
  padding: 0 24rpx;
}

.control-btn:active {
  transform: scale(0.95);
  background: rgba(255, 215, 0, 0.2);
}

.control-btn.playing {
  background: rgba(255, 215, 0, 0.2);
}

/* 横屏模式样式 */
@media screen and (orientation: landscape) {
  .container {
    padding: 0;
  }

  .subtitle-area {
    width: 100%;
    height: 100vh;
    padding: 40rpx 80rpx;
    padding-bottom: 40rpx;
  }

  .subtitle-wrapper {
    padding: 0;
    max-height: 100%;
    gap: 12rpx; /* 横屏时进一步减小行间距 */
  }

  /* 横屏时隐藏控制区域 */
  .controls {
    display: none;
  }
}