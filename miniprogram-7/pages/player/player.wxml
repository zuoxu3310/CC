<!-- 整体容器 -->
<view class="container">
  <!-- 字幕显示区域 -->
  <view class="subtitle-area">
    <!-- 字幕包装器，用于控制字幕布局和滚动 -->
    <view class="subtitle-wrapper">
      <!-- 字幕文本循环 -->
      <block wx:for="{{currentSubtitles}}" wx:key="text">
        <text class="subtitle-text" style="font-size: {{subtitleFontSize}}rpx">{{item.text}}</text>
      </block>
    </view>
  </view>
  
  <!-- 控制区域 -->
  <view class="controls">
    <!-- 返回按钮和时间信息 -->
    <view class="controls-header">
      <view class="back-btn" bindtap="handleBack">返回</view>
      <view class="time-info">
        <text class="time-display">{{currentTimeStr}}</text>
        <text class="time-divider">/</text>
        <text class="total-time">{{durationStr}}</text>
      </view>
    </view>

    <!-- 进度条部分 -->
    <view class="progress-section">
      <view class="progress-bar-wrapper">
        <slider 
          class="progress-bar" 
          min="0" 
          max="{{duration}}" 
          value="{{startTime}}"
          activeColor="#FFD700"
          backgroundColor="#333333"
          block-color="#FFD700"
          block-size="12"
          bindchange="handleSliderChange"
          bindchanging="handleSliderChanging"
        />
      </view>
    </view>
    
    <!-- 控制按钮组 -->
    <view class="buttons">
      <view class="control-btn" bindtap="handleBackward">-5s</view>
      <view class="control-btn {{isPlaying ? 'playing' : ''}}" bindtap="handlePlay">
        {{isPlaying ? '暂停' : '播放'}}
      </view>
      <view class="control-btn" bindtap="handleForward">+5s</view>
      <view class="control-btn" bindtap="handleReset">重置</view>
    </view>
  </view>
</view> 