<scroll-view class="scrollarea" scroll-y type="list">
  <view class="container">
    <!-- 文件列表 -->
    <view class="files-section" wx:if="{{files.length > 0}}">
      <view class="file-list">
        <view class="file-item" wx:for="{{files}}" wx:key="id">
          <view class="file-info" bindtap="handleFileClick" data-file="{{item}}" bindlongpress="handleLongPress">
            <text class="file-name">{{item.name}}</text>
            <text class="file-date">{{item.date}}</text>
          </view>
          <text class="arrow">›</text>
        </view>
      </view>
    </view>

    <!-- 无文件时显示 -->
    <view class="empty-state" wx:else>
      <text class="empty-text">暂无文件</text>
    </view>
  </view>
</scroll-view> 