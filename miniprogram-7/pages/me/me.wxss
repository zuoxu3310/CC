page {
  background: #FFFFFF;
}

.container {
  min-height: 100vh;
  padding: 24rpx 30rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: stretch;
}

/* 会员状态卡片 */
.member-card {
  width: auto;
  background: #FFFFFF;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 2rpx 2rpx 12rpx rgba(0, 0, 0, 0.08);
  border-radius: 12rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.member-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.member-title {
  font-size: 28rpx;
  color: #999999;
}

.member-status {
  font-size: 32rpx;
  color: #333333;
}

.upgrade-btn {
  background:rgb(38, 98, 250);
  color: #FFFFFF;
  font-size: 30rpx;
  padding: 16rpx 32rpx;
  border-radius: 8rpx;
  border: none;
  line-height: 1;
  margin: 0;
}

/* 功能列表 */
.menu-list {
  width: auto;
  background: transparent;
  box-shadow: none;
  border-radius: 12rpx;
}

.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  background: #FFFFFF;
  border-radius: 12rpx;
  margin-bottom: 24rpx;
  box-shadow: 2rpx 2rpx 12rpx rgba(0, 0, 0, 0.08);
  border-bottom: none;
}

.menu-item:last-child {
  margin-bottom: 20rpx;
}

.menu-left {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.menu-icon {
  width: 40rpx;
  height: 40rpx;
}

.menu-left text {
  font-size: 32rpx;
  color: #333333;
}

.arrow {
  color: #CCCCCC;
  font-size: 32rpx;
}

/* 弹出层样式 */
.popup-content {
  padding: 40rpx;
  box-sizing: border-box;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.popup-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  text-align: center;
}

.popup-text {
  flex: 1;
  font-size: 30rpx;
  color: #666;
  line-height: 1.6;
  overflow-y: auto;
}

.popup-btn {
  margin-top: 40rpx;
  background: rgb(38, 98, 250);
  color: #FFFFFF;
  font-size: 26rpx;
  padding: 20rpx 0;
  border-radius: 8rpx;
  width: 90%;
  border: none;
} 