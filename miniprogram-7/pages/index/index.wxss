/**index.wxss**/
page {
  background-color: #f5f5f7;
  height: 100vh;
}

.container {
  height: 100vh;
  background-color: #FFFFFF;
  display: flex;
  align-items: center;
  justify-content: center;
}

.content-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 80rpx;
  width: 100%;
  padding: 0 40rpx;
  box-sizing: border-box;
}

.header {
  text-align: center;
  background-color: rgba(0, 255, 0, 0.1);
  width: 100%;
}

.title {
  font-size: 48rpx;
  font-weight: 600;
  color: #1d1d1f;
  display: block;
  margin-bottom: 16rpx;
  background-color: rgba(0, 0, 255, 0.1);
}

.subtitle {
  font-size: 32rpx;
  color: #86868b;
  display: block;
  background-color: rgba(255, 255, 0, 0.1);
}

.button-group {
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.btn {
  width: 100%;
  height: 100rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  font-size: 32rpx;
  position: relative;
}

.btn-icon {
  font-size: 36rpx;
}

.upload-btn {
  background: #000000;
  color: #FFFFFF;
}

.search-btn {
  background: #FFFFFF;
  color: #000000;
  border: 2rpx solid #000000;
}

.test-btn {
  background: #F5F5F5;
  color: #000000;
}

/* 调试用的滚动区域背景色 */
.scrollarea {
  background-color: rgba(0, 255, 255, 0.1); /* 青色 - 滚动区域 */
  height: 100vh;
}

.recent-files {
  width: 100%;
  margin-top: 60rpx;
}

.recent-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.recent-title {
  font-size: 34rpx;
  font-weight: 500;
  color: #000000;
}

.more-btn {
  font-size: 40rpx;
  color: #999999;
  padding: 0 20rpx;
}

.file-list {
  width: 100%;
}

.file-item {
  background: #F5F5F5;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 16rpx;
}

.file-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  flex: 1;
  min-width: 0;
}

.file-name {
  font-size: 32rpx;
  color: #000000;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.file-date {
  font-size: 28rpx;
  color: #999999;
}

.arrow {
  font-size: 40rpx;
  color: #999999;
  flex-shrink: 0;
}
