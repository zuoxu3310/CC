<!--index.wxml-->
<scroll-view class="scrollarea" scroll-y type="list">
  <view class="container">
    <view class="content-wrapper">
      
      <view class="button-group">
        <view class="upload-btn btn" bindtap="uploadSrt">
          <text class="btn-icon"></text>
          <text>上传字幕文件</text>
        </view>
        
        <view class="search-btn btn" bindtap="goToSearch">
          <text class="btn-icon">🔍</text>
          <text>搜索字幕</text>
        </view>
        
        <view class="test-btn btn" bindtap="goToPlayer">
          <text class="btn-icon">▶</text>
          <text>演示模式</text>
        </view>
      </view>

      <view class="recent-files" wx:if="{{recentFiles.length > 0}}">
        <view class="recent-header">
          <text class="recent-title">最近文件</text>
          <text class="more-btn" bindtap="clearRecentFiles">···</text>
        </view>
        
        <view class="file-list">
          <view class="file-item" wx:for="{{recentFiles}}" wx:key="id" bindtap="handleFileClick" data-file="{{item}}">
            <view class="file-info">
              <text class="file-name">{{item.name}}</text>
              <text class="file-date">{{item.date}}</text>
            </view>
            <text class="arrow">›</text>
          </view>
        </view>
      </view>
    </view>
  </view>
</scroll-view>
