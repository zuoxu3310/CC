/* 页面容器 */
.container {
  min-height: 100%;
  background: #FFFFFF;
}

/* 搜索框外层容器 */
.search-header {
  background: #FFFFFF;
  padding: 0;
}

/* 搜索框区域样式 */
.search-bar {
  /* 搜索框位置调整 */
  margin-top: 24rpx ;
  padding: 0 32rpx ;
}


/* 搜索历史区域 */
.history-section {
  width: 90%;
  margin: 0 auto;
  padding: 20rpx 32rpx;
}

/* 搜索历史标题栏 */
.history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

/* 搜索历史标题 */
.history-title {
  font-size: 28rpx;
  color: #999999;
}

/* 历史标签容器 */
.history-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

/* 历史标签 */
.history-tag {
  padding: 16rpx 32rpx;
  background: #F5F5F5;
  border-radius: 32rpx;
  font-size: 28rpx;
  color: #333333;
}

/* 自定义 van-search 组件样式 */
.van-search {
  width: 100%;
}

.van-search__content {
  /* 修改搜索框背景色 */
  background-color: #F5F5F5 !important;
}

.history-header, .hot-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.history-title, .hot-title {
  font-size: 34rpx;
  font-weight: 500;
  color: #333333;
}

.history-tags, .hot-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 24rpx;
}

.history-tag, .hot-tag {
  padding: 16rpx 32rpx;
  background: #F5F5F5;
  border-radius: 32rpx;
  font-size: 28rpx;
  color: #333333;
}

page {
  /* 页面背景色 */
  background: #FFFFFF;
  height: 100vh;
  overflow-y: auto;
}

/* 添加文件列表样式 */
.scrollarea {
  height: calc(100vh - 54px - 180rpx);
}

.container {
  height: 100%;
  background-color: #FFFFFF;
  padding-top: 24rpx;
}

.files-section {
  width: 95%;
}

.file-list {
  width: 100%;
}

.file-item {
  background: #F5F5F5;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.file-info {
  flex: 1;
  min-width: 0;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.file-name {
  font-size: 32rpx;
  color: #333333;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.file-date {
  font-size: 28rpx;
  color: #999999;
}

.arrow {
  font-size: 40rpx;
  color: #999999;
}

.clear-history {
  font-size: 28rpx;
  color: #4B7BF9;
  padding: 10rpx;
}

/* 搜索结果部分样式 */
.search-results {
  width: 90%;
  margin: 20rpx auto;
  padding: 0 32rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 28rpx;
  color: #999999;
} 