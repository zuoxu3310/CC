<!-- 顶部搜索框 -->
<van-search
  class="search-bar"
  value="{{ searchValue }}"
  placeholder="电影请输入IMDB ID,剧集请输入TMDB ID S01E01"
  bind:change="onSearchInput"
  bind:search="onSearch"
  focus="{{true}}"
  shape="round"
  background="#FFFFFF"
/>

<!-- 搜索历史部分 -->
<view class="history-section">
  <view class="history-header">
    <text class="history-title">搜索历史</text>
    <text class="clear-history" bindtap="clearHistory">清除</text>
  </view>
  
  <view class="history-tags">
    <view 
      class="history-tag" 
      wx:for="{{searchHistory}}" 
      wx:key="*this"
      bindtap="onHistoryTap"
      data-keyword="{{item}}"
    >{{item}}</view>
  </view>
</view>

<!-- 搜索结果列表 -->
<view class="search-results" wx:if="{{searchResults.length > 0}}">
  <view class="section-header">
    <text class="section-title">搜索结果</text>
  </view>
  <view class="file-list">
    <view class="file-item" wx:for="{{searchResults}}" wx:key="id">
      <view class="file-info" bindtap="handleSubtitleClick" data-subtitle="{{item}}">
        <text class="file-name">{{item.title}}</text>
        <text class="file-date">{{item.language}} {{item.format}}</text>
      </view>
      <text class="arrow">›</text>
    </view>
  </view>
</view>

